{{>header}}
<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-4 mb-4">
            <h1>Welcome back to the Cake Factory!</h1>
            <form method="post" action="/login">
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input required type="text" class="form-control" name="emailAddress" id="emailAddress" placeholder="email@domain.com">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input required type="password" class="form-control" name="password" id="password" placeholder="*****">
                </div>
                <button type="submit" class="btn btn-primary float-right" id="sign-in">Sign in</button>
            </form>
        </div>
    </div>
</div>
{{>footer}}